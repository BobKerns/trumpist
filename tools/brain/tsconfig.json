{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "system",
    "target": "es6",
    "sourceMap": true,
    "noImplicitAny": true,
    "allowJs": false,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "listFiles": true,
    "listEmittedFiles": true,
    "lib": ["ESNext"],
    "types": ["ramda", "winston", "logform"]
  },
  "exclude": [
    "node_modules",
    "../node_modules"
  ]
}